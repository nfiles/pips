{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "trailingComma": "all"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
